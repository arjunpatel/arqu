<!DOCTYPE html>
<html>
<head>
  <title>Arqu</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,300,600,700' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body id="<%= params[:controller] %>_<%= params[:action] %>">
<div id="header_lines"></div>
<div id="container">
  <div id="site_info_container">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Word</th>
          <th>Age</th>
          <th>Gender</th>
          <th>Country</th>
          <th>City</th>
          <th>Native Language</th>
        </tr>
      </thead>
      <tbody>
        <% if @result.length > 0 %>
          <% @result.each do |dict| %>
            <% @user = User.find(dict.user_id) %>
            <tr>
              <td> <%= dict.word %> </td>
              <td> <%= @user.age %> </td>
              <td> <%= @user.gender %> </td>
              <td> <%= @user.country %> </td>
              <td> <%= @user.state %></td>
              <td> <%= @user.native_language %> </td>
            </tr>
           <% end %>
        <% end %>
        
      </tbody>
     </table>
  </div>
  <a class="btn btn-primary" style="color:white;" href="/search">Advance Search</a> <a style="color:white;" class="btn btn-primary" href="/">Search Again</a>
</div>

<div id="footer">
  <div id="left">Project by UCSD students.</div>
  <div id="right">GNU General Public License, version 3 (GPL 3.0)</div>
</div>

</body>
</html>
